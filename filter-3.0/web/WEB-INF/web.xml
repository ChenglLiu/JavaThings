<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 注册servlet -->
    <servlet>
        <servlet-name>show</servlet-name>
        <servlet-class>com.liuclo.servlet.ShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>       <!-- 有过滤器支持 -->
        <servlet-name>show</servlet-name>
        <url-pattern>/servlet/show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>       <!-- 没有过滤器支持 -->
        <servlet-name>show</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>

    <!-- 注册Filter -->
    <filter>
        <filter-name>character</filter-name>
        <filter-class>com.liuclo.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>character</filter-name>
        <!-- 只要是/servlet下的任何请求 均将经过过滤器 -->
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>

    <!-- 注册监听器 -->
    <listener>
        <listener-class>com.liuclo.listener.OnlineCountListener</listener-class>
    </listener>

    <!-- session 1min 自动注销 -->
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>

    <!-- 注册servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.liuclo.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/servlet/login</url-pattern>
    </servlet-mapping>

    <!-- 注册servlet -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.liuclo.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/servlet/logout</url-pattern>
    </servlet-mapping>
</web-app>